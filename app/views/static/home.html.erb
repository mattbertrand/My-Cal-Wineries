<h1 class="center">MyCalWineries</h1>

<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Already have an account?</span>
          <p><% if current_user %>
                <div>Hey <%= current_user.name %></div>
                <%= image_tag(current_user.image) if !!image_tag(current_user.image) %>
            <% end %>

            <% unless current_user %>
                <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post %>
            <% else %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            <% end %></p>
        </div>
        <div class="card-action">
                <li><%= link_to "Discover Wineries", wineries_path %></li>
            </div>
      </div>
    </div>
  </div>


<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Signup or Login</span>
          
            <div class="card-action">
                <p><li><%= link_to "Signup", new_user_registration_path %></li>
                <li><%= link_to "Login", new_user_session_path %></li></p>
            </div>
        </div>
      </div>
    </div>
  </div>